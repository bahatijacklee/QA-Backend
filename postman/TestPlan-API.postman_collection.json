      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"TestPassword123!\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save the auth cookie for subsequent requests",
              "var cookie = pm.response.headers.get('set-cookie');",
              "if (cookie) {",
              "    pm.environment.set('auth_cookie', cookie.split(';')[0]);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
