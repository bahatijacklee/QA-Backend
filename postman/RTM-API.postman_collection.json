{
  "info": {
    "name": "QA Dashboard RTM API",
    "_postman_id": "c3d4e5f6-a1b2-7890-abcd-ef1234567890",
    "description": "Test Requirement Traceability Matrix (RTM) endpoints related to TestPlan.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login (Get Auth Cookie)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"TestPassword123!\"\n}"
        },
        "url": {
          "raw": "http://https://qa-backend-fak5.onrender.com/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save the auth cookie for subsequent requests",
              "var cookie = pm.response.headers.get('set-cookie');",
              "if (cookie) {",
              "    pm.environment.set('auth_cookie', cookie.split(';')[0]);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Requirement (RTM Entry)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Cookie", "value": "{{auth_cookie}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reqId\": \"REQ-001\",\n  \"description\": \"Login must support SSO\",\n  \"testPlan\": \"<testplan_id>\",\n  \"mainFeature\": \"Authentication\",\n  \"featureSubsection\": \"SSO\",\n  \"remarks\": \"Critical\",\n  \"testStatus\": \"Pass\",\n  \"testcaseIds\": \"TC-001,TC-002\"\n}"
        },
        "url": {
          "raw": "http://https://qa-backend-fak5.onrender.com/api/requirements",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "requirements"]
        }
      }
    },
    {
      "name": "Get All Requirements for TestPlan (RTM)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Cookie", "value": "{{auth_cookie}}" }
        ],
        "url": {
          "raw": "http://https://qa-backend-fak5.onrender.com/api/requirements/testplan/<testplan_id>",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "requirements", "testplan", "<testplan_id>"]
        }
      }
    },
    {
      "name": "Get Requirement By ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Cookie", "value": "{{auth_cookie}}" }
        ],
        "url": {
          "raw": "http://https://qa-backend-fak5.onrender.com/api/requirements/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "requirements", ":id"]
        }
      }
    },
    {
      "name": "Update Requirement",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Cookie", "value": "{{auth_cookie}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Updated description\",\n  \"testStatus\": \"Fail\"\n}"
        },
        "url": {
          "raw": "http://https://qa-backend-fak5.onrender.com/api/requirements/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "requirements", ":id"]
        }
      }
    },
    {
      "name": "Delete Requirement",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Cookie", "value": "{{auth_cookie}}" }
        ],
        "url": {
          "raw": "http://https://qa-backend-fak5.onrender.com/api/requirements/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "requirements", ":id"]
        }
      }
    }
  ]
}
