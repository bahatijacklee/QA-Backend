{
  "info": {
    "name": "QA Dashboard Project API",
    "_postman_id": "a1b2c3d4-e5f6-7890-abcd-ef1234567890",
    "description": "Test Project CRUD endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login (Get Auth Cookie)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"TestPassword123!\"\n}"
        },
        "url": {
          "raw": "http://https://qa-backend-fak5.onrender.com/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save the auth cookie for subsequent requests",
              "var cookie = pm.response.headers.get('set-cookie');",
              "if (cookie) {",
              "    pm.environment.set('auth_cookie', cookie.split(';')[0]);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Project",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Cookie", "value": "{{auth_cookie}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"project_name\": \"My First Project\",\n  \"start_date\": \"2025-09-01\",\n  \"end_date\": \"2025-12-31\",\n  \"test_plan_ids\": [\"<test_plan_id>\"]\n}\n// Note: test_plan_ids should be an array of TestPlan ObjectIds. Leave empty or add valid IDs."
        },
        "url": {
          "raw": "http://https://qa-backend-fak5.onrender.com/api/projects",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "projects"]
        }
      }
    },
    {
      "name": "Get All Projects",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Cookie", "value": "{{auth_cookie}}" }
        ],
        "url": {
          "raw": "http://https://qa-backend-fak5.onrender.com/api/projects",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "projects"]
        }
      }
    },
    {
      "name": "Get Project By ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Cookie", "value": "{{auth_cookie}}" }
        ],
        "url": {
          "raw": "http://https://qa-backend-fak5.onrender.com/api/projects/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "projects", ":id"]
        }
      }
    },
    {
      "name": "Update Project",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Cookie", "value": "{{auth_cookie}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"project_name\": \"Updated Project\",\n  \"start_date\": \"2025-10-01\",\n  \"end_date\": \"2025-12-31\",\n  \"test_plan_ids\": [\"<test_plan_id>\"]\n}\n// Note: test_plan_ids should be an array of TestPlan ObjectIds."
        },
        "url": {
          "raw": "http://https://qa-backend-fak5.onrender.com/api/projects/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "projects", ":id"]
        }
      }
    },
    {
      "name": "Delete Project",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Cookie", "value": "{{auth_cookie}}" }
        ],
        "url": {
          "raw": "http://https://qa-backend-fak5.onrender.com/api/projects/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "projects", ":id"]
        }
      }
    }
  ]
}
